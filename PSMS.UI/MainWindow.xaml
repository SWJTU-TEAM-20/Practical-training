                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30*"/>
                            <RowDefinition Height="30*"/>
                        </Grid.RowDefinitions>
                        <Button Width="74"
                                Grid.Column="1"
                                Grid.Row="0"
                                Height="35"
                                Background="#31ADFF"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Center"
                                FontSize="16px"
